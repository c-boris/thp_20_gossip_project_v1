<!DOCTYPE html>
<html>
    <center>
    <br>
      <h1><p class = "text-secondary">Se connecter</h1></p>
      <br>

      <div class="card text-white bg-primary mb-3" style="width: 32rem;">
        <div class="card-body">
          <%= form_tag('/sessions', method: 'post') do %>
            <br>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= label_tag "Email : " %><br>
            <%= text_field_tag :email, nil %><br><br>
            <%= label_tag "Mot de passe : " %><br>
            <%= text_field_tag :password, nil %><br><br>
            <br><br>
            <%= submit_tag "Se connecter", data: { turbo: false } %>
            <br>
            <p></p>
          <% end %>
        </div>
      </div>
    </center>
  </body>
</html>
